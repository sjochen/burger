<div class="jumbotron shadow">
    <h1 class="display-3 text-center">Bob's Special Burgers</h1>
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>
</div>



<div class="row">
    <div class="col-1"></div>
    <div class="col-4 bg-info shadow">
        <h2>Burgers that need to be devoured</h2>
        {{#each burgers}}
        {{#unless devoured}}
        <div class="bg-info m-2 shadow col-12">
            <h1 class="float-left">{{this.burger_name}}</h1><button data-id={{this.id}} class="float-right change-devour">Devour</button>
        </div>
        {{/unless}}
        {{/each}}
    </div>


    <div class="col-2"></div>



    <div class="col-4 bg-secondary shadow">
        <h2>Burgers that have been devoured</h2>
        {{#each burgers}}
        {{#if devoured}}
        <div class="bg-info m-2 shadow col-12">
            <h1 class="float-left text-white">{{this.burger_name}}</h1>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>


